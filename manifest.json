{
    "manifest_version": 2,
    "name": "Waifu",
    "version": "1.0",
    "description": "The best Waifu extension out there.",

    "content_scripts": [
        {
          "matches": [
            "<all_urls>"
          ],
          "js": ["content.js"]
        }
      ],

      "browser_action": {
        "default_icon": "icon.png",
        "popup": "popup.html"
      }

