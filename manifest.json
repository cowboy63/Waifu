{
  "manifest_version": 2,
  "name": "Waifu",
  "version": "1.0",
  "description": "The best Waifu extension out there.",

  "background": {
    "scripts":["scripts/background.js"]
  },

  "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "css": ["styles.css"],
        "js": ["scripts/content.js"]
      } ],

    "browser_action": {
      "default_icon": "icon/icon16.png",
      "popup": "popup.html"
    }

    /*
          "background": {
      "scripts": ["background.js"]
    }
  */

}
